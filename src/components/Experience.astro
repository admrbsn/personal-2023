---
export interface Props {
	dates: string;
	role: string;
	body: string;
}

const { dates, role, body } = Astro.props;
---

<li class="mb-8 pb-8 border-b-2 border-[#c6ebe7]">
	<div class="text-[#2bb0a3] text-lg font-semibold">{dates}</div>
	<div class="mb-5 text-2xl font-extrabold">{role}</div>
	<p class="dark:opacity-75 text-base leading-relaxed">{body}</p>
</li>

<style>
	li:last-child {
		@apply mb-0 pb-0 border-0;
	}
</style>