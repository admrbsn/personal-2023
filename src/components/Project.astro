---
export interface Props {
	title: string;
	body: string;
	href: string;
	image: string;
}

const { href, title, body, image } = Astro.props;
---

<li class="w-3/4 min-w-[75%] pr-5 md:w-auto md:min-w-0 md:mb-8 md:pr-0">
	<a href={href} class="md:flex items-center">
		<img class="md:w-1/2 md:mr-10 bg-[#f7f5f2] border-2 border-white rounded-2xl" src={image} alt="{title} thumbnail.">
		<div class="md:w-3/5 py-5 md:py-12 md:pr-12 pl-0">
			<h2 class="mb-3 text-3xl font-bold leading-tight">
				{title}
			</h2>
			<p class="mb-6 text-base leading-relaxed light:text-[#ebd5c5] dark:opacity-75">
				{body}
			</p>
			<p class="marker font-semibold">See more<span class="mt-0.5 ml-1">&rarr;</span></p>
		</div>
	</a>
</li>

<style>
	.marker {
		width: fit-content;
    transition: all .15s ease-out;
    text-decoration: none;
    background-image: linear-gradient(transparent 50%, #bff2ec 0%);
    background-size: 0 100%;
    background-repeat: no-repeat;
    border-bottom: 2px solid;
		padding-bottom: 2px;
	}
	a:hover .marker {
		background-size: 100% 100%;
    border-bottom: 2px solid #4edbcb;
	}
	a:hover img {
		border: 2px solid black;
	}
</style>